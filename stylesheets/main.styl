.slide-wrapper
  position relative
  max-width 640px
  width 100%
  padding 0 50px
  margin 0 auto

blockquote
  font: italic 1em  Georgia, verdana, Helvetica,  "Times New Roman", Times, serif;
  span 
    display: block
    padding-top: 10px
    padding-bottom: 15px
    font: bold 1.1em  Georgia, verdana, Helvetica,  "Times New Roman", Times, serif; 


@media (max-width: 720px)
  .trainer
    column 12
    img
      display none
    .bio
      display inline
      position relative
  .modules
    row 12
    .module
      column 6, 12
      min-height 120px

@media (max-width: 360px)
  .modules
    .module
      column 10
      margin-bottom 20px
      min-height 100px